---
import Layout from '../layouts/Layout.astro';
import CardMain from '../components/CardMain.astro'

import '../styles/main.css'
---

<Layout title="DesigNerd ðŸ¤“ - Dive into the world's greatest product design">
	<main class="section-container">
		<div class="bg-animation">
			<div class="main blob"></div>
			<div class="second blob" />
			<div class="third blob" />
		</div>
		<div class="hero-text">
			<p class="tagline">A collection of <span class="accent">extraordinary</span> brand guidelines</p>
			<h1 class="title">
				Every small piece <span class="gradient-accent">matters</span>
			</h1>
			<p class="body-text">Check out how big companies build systems to create cohesive products</p>
		</div>

		<CardMain />
	</main>
</Layout>

<style is:global>
	.section-container {
		display: flex;
		flex-direction: column;
		justify-content: center;
		margin: auto;
	}

	.tagline {
		font-family: var(--font-primary);
		font-size: 16px;
		font-weight: 400;
		text-align: center;
		margin-bottom: 10px;
	}

	.title {
		font-family: var(--font-secondary);
		font-size: 54px;
		line-height: 64px;
		text-align: center;
		text-transform: uppercase;
		text-shadow: 4px 4px 0 var(--primary-500);
		width: 766px;
		margin: auto;
		margin-bottom: 10px;
	}

	.accent {
		cursor: pointer;
		transition: 400ms;
	}

	.accent:hover {
		color: var(--primary-500);
		background: linear-gradient(45deg, #B617E6, #FAAB00);
		text-shadow: 0 0 8px rgb(182, 23, 230, 0.6);
		-webkit-background-clip: text;
		background-clip: text;
		-webkit-text-fill-color: transparent;
	}

	.body-text {
		margin-bottom: 96px;
		text-align: center;
	}

	.bg-animation {
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		z-index: -2;
		width: 700px;
		height: 700px;
		position: fixed;
		top: 12%;
		left: 25%;
		filter: blur(72px);
		opacity: 0.4;
	}

	.blob {
		width: 300px;
		border-radius: 100px;
	}

	.main {
		background-color: var(--primary-600);
		position: absolute;
		top: 250px;
		left: 80px;
		width: 200px;
		height: 240px;
		
		animation: main 8s infinite ease;
		}

	.second {
		background-color: var(--primary-500);
		position: absolute;
		top: 80px;
		right: 20px;
		width: 200px;
		height: 200px;
		
		animation: second 8s infinite ease;
	}

	.third {
		background-color: var(--primary-400);
		position: absolute;
		right: 0;
		top: 300px;
		width: 200px;
		height: 250px;
		
		animation: third 8s infinite linear;
	}

	@keyframes main {
		0% {top: 200px; left: 100px; transform: scale(1);}
		30% {top: 300px; left: 150px; transform: scale(1.2);}
		60% {top: 100px; left: 200px; transform: scale(1.3);}
		100% {top: 200px; left: 100px; transform: scale(1);}
	}

	@keyframes second {
		0% {top: 80px; right: -20px; transform: scale(1.2);}
		30% {top: 300px; right: -20px;transform: scale(1);}
		60% {top: 200px; right: 100px;transform: scale(1);}
		100% {top: 120px; right: -20px; transform: scale(1.4);}
	}

	@keyframes third {
		0% {top: 250px; right: 0px; transform: scale(1);}
		30% {top: 150px; right: 150px;transform: scale(1.4);}
		60% {top: 250px; right: 100px;transform: scale(1);}
		100% {top: 250px; right: 0px; transform: scale(1);}
	}

</style>
